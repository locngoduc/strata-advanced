{
    "functions": {
      "api/**": { "runtime": "vercel-php@0.7.3" }
    },
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)\\.php", "dest": "/api/pages/$1.php" },
      { "src": "/(.*)", "dest": "/api/$1" }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "X-XSS-Protection", "value": "1; mode=block" }
        ]
      }
    ]
  }